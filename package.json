{
  "name": "git-synced",
  "version": "1.1.2",
  "description": "Keep a fork up to date",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/bukinoshita/git-synced.git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "test": "xo --quiet",
    "bundle": "bundlesize"
  },
  "bin": {
    "git-synced": "index.js"
  },
  "keywords": [
    "git",
    "github",
    "sync",
    "fork",
    "update",
    "git-synced",
    "cli"
  ],
  "dependencies": {
    "chalk": "^1.1.3",
    "execa": "^0.7.0",
    "gh-got": "^6.0.0",
    "git-url-prettify": "^0.0.2",
    "has-package": "^0.0.1",
    "inquirer": "^3.1.1",
    "is-github-repo": "^0.0.2",
    "is-url": "^1.2.2",
    "meow": "^3.7.0",
    "nicht": "^0.0.1",
    "ora": "^1.3.0",
    "read-package": "^0.0.1",
    "repo-exist": "^0.0.1",
    "shout-error": "^0.0.1",
    "shout-message": "^0.0.1",
    "shout-success": "^0.0.1",
    "update-notifier": "^2.2.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "bundlesize": "^0.6.1",
    "eslint-config-prettier": "^2.1.1",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "prettier": "^1.4.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "rules": {
      "prefer-promise-reject-errors": 0,
      "no-unused-expressions": 0,
      "unicorn/no-process-exit": 0
    }
  },
  "bundlesize": [
    {
      "path": "./index.js",
      "threshold": "860B"
    }
  ],
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  }
}
