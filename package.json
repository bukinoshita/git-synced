{
  "name": "git-synced",
  "version": "0.0.0",
  "description": "Keep a fork up to date",
  "main": "index.js",
  "repository": "https://github.com/bukinoshita/git-synced.git",
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "test": "xo --quiet"
  },
  "bin": {
    "git-synced": "index.js"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "execa": "^0.7.0",
    "has-package": "^0.0.1",
    "meow": "^3.7.0",
    "nicht": "^0.0.1",
    "ora": "^1.3.0",
    "read-package": "^0.0.1",
    "update-notifier": "^2.2.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.1.1",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "prettier": "^1.4.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "rules": {
      "prefer-promise-reject-errors": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  }
}
